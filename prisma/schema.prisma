generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User and Auth
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
  PRODUCTION_MANAGER
  INVENTORY_MANAGER
}

// Core business models
model Material {
  id          String         @id @default(cuid())
  type        String
  color       String
  brand       String
  quantity    Float
  location    String
  photos      String[]      // URLs to photos
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  styleItems  StyleMaterial[]
}

model Style {
  id          String         @id @default(cuid())
  name        String
  season      String
  phase       Phase
  materials   StyleMaterial[]
  photos      String[]      // URLs to photos
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model StyleMaterial {
  id          String   @id @default(cuid())
  style       Style    @relation(fields: [styleId], references: [id])
  styleId     String
  material    Material @relation(fields: [materialId], references: [id])
  materialId  String
  quantity    Float
}

enum Phase {
  SWATCH
  INITIAL_SAMPLE
  FIT_SAMPLE
  PRODUCTION_SAMPLE
  PRODUCTION
}